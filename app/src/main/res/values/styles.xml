<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorCrystalClear</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorSliver</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/ubuntur</item>
        <item name="android:textColorPrimary">@color/colorSliver2</item>
        <item name="android:textColorSecondary">@color/colorSliver2</item>
        <item name="actionMenuTextColor">@color/colorSliver2</item>
    </style>

    <style name="ListChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@null</item>
        <item name="closeIcon">@null</item>
        <item name="chipBackgroundColor">@color/colorSliver</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
